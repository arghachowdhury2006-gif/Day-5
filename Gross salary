#include<stdio.h>
int main() {
	float basic, hra, ta, da, gross;
	    printf("basic salary:");
		scanf("%f", &basic);
		
	   if(basic >= 0) {
	   	hra = 0.20 * basic;
	   	ta = 0.10 * basic;
	   	da = 0.05 * basic;
	   	gross = basic + hra + ta + da;
	   	
	   	printf("hra = %.2f\n", hra);
	   	printf("ta = %.2f\n", ta);
	   	printf("da = %.2f\n", da);
	   	printf("gross = %.2f\n", gross);
	    } else {
	    	printf("invalid basic salary:\n");
		}
    return 0;	
}
